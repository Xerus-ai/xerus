{
  "name": "xerus-backend-service",
  "version": "1.0.0",
  "description": "Xerus AI Backend API Service - Microservices Architecture",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest tests/unit --testPathPattern=tests/unit --coverage",
    "test:integration": "jest tests/integration --testPathPattern=tests/integration --coverage",
    "test:e2e": "jest tests/e2e --testPathPattern=tests/e2e --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "echo 'Build process for backend service'",
    "docker:build": "docker build -f docker/Dockerfile.prod -t xerus-backend .",
    "docker:run": "docker run -p 5001:5001 xerus-backend",
    "health": "curl -f http://localhost:5001/health || exit 1"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.57.0",
    "@google/generative-ai": "^0.24.1",
    "@langchain/anthropic": "^0.3.26",
    "@langchain/community": "^0.3.50",
    "@langchain/core": "^0.3.69",
    "@langchain/langgraph": "^0.4.4",
    "@langchain/openai": "^0.6.7",
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@neondatabase/serverless": "^1.0.1",
    "axios": "^1.11.0",
    "better-sqlite3": "^9.6.0",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "eventsource": "^4.0.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.4.0",
    "googleapis": "^159.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.3.30",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "openai": "^5.11.0",
    "pg": "^8.16.3",
    "simple-oauth2": "^5.1.0",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prebuild-install": "^7.1.3",
    "socket.io-client": "^4.8.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "api/**/*.js",
      "services/**/*.js",
      "database/**/*.js",
      "utils/**/*.js",
      "!**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "xerus-ai",
    "backend",
    "microservices",
    "api",
    "express",
    "postgresql",
    "neon"
  ],
  "author": "Xerus AI Team",
  "license": "GPL-3.0"
}
