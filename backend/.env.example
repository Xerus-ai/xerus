# Xerus Backend Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=your_neon_database_url
SQLITE_PATH=./data/xerus_guest.db

# Authentication
JWT_SECRET=your_jwt_secret_key_here
FIREBASE_PROJECT_ID=your_firebase_project_id

# OAuth Provider Configurations
# Google OAuth (Calendar, Gmail, Drive)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# Slack OAuth
SLACK_CLIENT_ID=your_slack_oauth_client_id
SLACK_CLIENT_SECRET=your_slack_oauth_client_secret

# Notion OAuth
NOTION_CLIENT_ID=your_notion_oauth_client_id
NOTION_CLIENT_SECRET=your_notion_oauth_client_secret

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# Microsoft OAuth (Outlook, Teams)
MICROSOFT_CLIENT_ID=your_microsoft_oauth_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_oauth_client_secret

# Tool Credentials Encryption
CREDENTIAL_ENCRYPTION_KEY=your_secure_encryption_key_here

# External API Keys
PERPLEXITY_API_KEY=your_perplexity_api_key
TAVILY_API_KEY=your_tavily_api_key
FIRECRAWL_API_KEY=your_firecrawl_api_key

# Server Configuration
PORT=5001
NODE_ENV=development
API_BASE_URL=http://localhost:5001/api/v1

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/xerus-backend.log